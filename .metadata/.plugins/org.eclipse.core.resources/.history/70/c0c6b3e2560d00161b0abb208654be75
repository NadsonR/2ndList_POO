
public class Retangulo extends Forma{
		
		private double 	lado = 0, 
						altura = 0;
		protected double area = 0,
						 perimeter = 0;
		
		public Retangulo(double lado, double altura){
			this.lado = lado;
			this.altura = altura;
		}
		
		public double setArea(double lado, double altura){
			area = lado*altura;
			return area ;
		}
		public double setPerimeter(double lado, double altura){
			perimeter = 2*lado + 2*altura;
			return perimeter;
		}
}
